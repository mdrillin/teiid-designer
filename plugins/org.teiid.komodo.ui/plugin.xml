<plugin>

<!-- KomodoPerspective -->
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspectiveName"
            icon="icons/full/cview16/perspective.gif"
            class="org.teiid.komodo.ui.KomodoPerspectiveFactory"
            id="komodoPerspective">
      </perspective>
   </extension>
   
<!-- Komodo view category -->
   <extension
         point="org.eclipse.ui.views">
      <category
            name="%komodoViewCategory"
            id="org.teiid.komodo.ui">
      </category>
<!-- Modeshape Repos view -->
      <view
            name="%reposView.name"
            icon="icons/full/cview16/metamodels.gif"
            category="org.teiid.komodo.ui"
            class="org.teiid.komodo.ui.views.ReposView"
            id="views.reposView">
      </view>
   </extension>

</plugin>
